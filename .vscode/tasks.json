{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run C++ with IO",
            "dependsOn": ["Run C++ with IO", "Execute with IO"],
            "dependsOrder": "sequence",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run C++ with IO",
            "type": "shell",
            "command": "g++",
            "args": [
                "${file}",
                "-std=c++17",
                "-O2",
                "-o",
                "${fileBasenameNoExtension}.exe"
            ],
            "problemMatcher": "$gcc"
        },
        {
            "label": "Execute with IO",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "${fileBasenameNoExtension}.exe < input.txt > output.txt"
            ]
        }
    ]
}
